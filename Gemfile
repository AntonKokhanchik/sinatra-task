source 'https://rubygems.org'

gem 'sqlite3'
# Работа с БД SQLite
# Репозиторий: https://github.com/sparklemotion/sqlite3-ruby/

gem 'sequel'
# Простой набор классов для абстрактной работы с БД
# Официальный сайт: http://sequel.jeremyevans.net/
# Репозиторий: https://github.com/jeremyevans/sequel

gem 'sinatra'
# Собственно сам фреймворк Синатра
# Официальный сайт: http://www.sinatrarb.com/
# Репозиторий: https://github.com/sinatra/sinatra

gem 'slim'
# Поддержка синтаксиса шаблонизатора Slim
# Официальный сайт: http://slim-lang.com/
# Репозиторий: https://github.com/slim-template/slim

gem 'rack'
# Посредник между веб-сервером и Руби-фреймворками
# В нашем примере он требуется для поддержки HTTP-авторизации
# Официальный сайт: http://rack.github.io/
# Репозиторий: https://github.com/rack/rack

gem 'rake'
# Таск-раннер для выполнения определенного Руби-кода по сценарию
# В нашем примере он требуется для поддержки HTTP-авторизации
# Репозиторий: https://github.com/ruby/rake

gem 'hash_dot'
# Удобное обращение к значениям хэшей по ключу через dot-методы
# В нашем примере он потребуется для загрузки настроек из YAML-файла
# Репозиторий: https://github.com/adsteel/hash_dot

gem 'faker'
# Генерирует случайные данные, например имена, адреса, телефоны по шаблону
# Репозиторий: https://github.com/stympy/faker
